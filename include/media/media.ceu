/* SCENE */
data IScene with
  var& ISceneRaw raw;
  event (int, int, int, bool)  mouse_clicked;
  event (int, int)             mouse_moved;
  event (_char_ptr_ext, bool)  key;
  event (u64)                  tick;
  event (_char_ptr_ext)        error;
  event (void)                 quit;
end

code/await Scene (var Size? size)
              -> (var& IScene scene)
                  -> void
do
  var& ISceneRaw raw;
  var Size raw_size =  _;
  if (size?) then
    raw_size = size!;
  end
  watching Scene_Raw (raw_size) -> (&raw)
  do
    var IScene ref_ = val IScene (&raw, _, _, _, _, _, _);
    scene = &ref_;
    par/or do
      var int x;
      var int y;
      var int button;
      var bool press;
      every (x, y, button, press) in raw.mouse_clicked do
        emit ref_.mouse_clicked (x, y, button, press);
      end
    with
      var int x;
      var int y;
      every (x, y) in raw.mouse_moved do
        emit ref_.mouse_moved (x, y);
      end
    with
      var _char_ptr_ext key;
      var bool press;
      every (key, press) in raw.key do
        emit ref_.key (key, press);
      end
    with
      var u64 tick;
      every (tick) in raw.tick do
        emit ref_.tick (tick);
      end
    with
      var _char_ptr_ext error;
      every (error) in raw.error do
        emit ref_.error (error);
      end
    with
      await ref_.quit;
      emit raw.quit;
    end
  end
end

code/tight
Scene_Pause (var& IScene scene) -> void
do
  call Scene_Raw_Pause (&scene.raw);
end

code/tight
Scene_Resume (var& IScene scene) -> void
do
