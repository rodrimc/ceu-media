do
  call Scene_Raw_Set_Tick_Interval (&scene.raw, interval);
end

/* PLAYER */
data IPlayer with
  var& IPlayerRaw raw;
  event void      ok;
  event void      sought;
end

code/await Play (var& IScene scene, var& Media media)
                  -> (var& IPlayer player)
                      -> void
do
  var& IPlayerRaw raw;

  watching Play_Raw (&scene.raw, &media) -> (&raw)
  do
    var IPlayer ref_ = val IPlayer (&raw, _, _);
    player = &ref_;
    par do
      every raw.ok do
        emit ref_.ok;
      end
    with
      every raw.sought do
        emit ref_.sought;
      end
    end
  end
end

