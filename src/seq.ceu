// APPLICATION: pure Ceu, no external types, C, etc

#include "media.ceu"

var Scene s with
  this.size = Size (1080, 720);
end;

var Media m1 = Media.VIDEO ("../../resources/misc.avi", Region (0, 0, s.size!.width, s.size!.height),
                      1, 1.0, 1.0);
var Media m2 = Media.VIDEO ("../../resources/bars.ogg", Region (0, 0, s.size!.width, s.size!.height),
                      1, 1.0, 1.0);

do Player.play (m1, &s);
do Player.play (m2, &s);

escape 0;
