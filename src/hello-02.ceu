#include "media/media.ceu"

var int width = 1080;
var int height = 720;

var Media.Video m = val Media.Video (
                          [].."resources/clock.ogv",
                          Region(0, 0, 1, width, height),
                          1.0,
                          1.0
                        );

var& IScene scene;
watching Scene(Size(width,height)) -> (scene) do
  watching scene.key, scene.mouse_clicked do
    loop do
      await Play(&scene, &m);
    end
  end
end

escape 0;
