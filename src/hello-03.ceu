#include "c.ceu"
#include "media/media.ceu"

var int width = 640;
var int height = 480;

var Media.Text text = val Media.Text (
                          [].."one",
                          [].."sans 40",
                          Region(0, 400, width, 80, 2),
                          0xffff0048,
                        );

var Media.Video video = val Media.Video (
                          [].."resources/night.avi",
                          Region(0, 0, width, height, 1),
                          1.0,
                          1.0,
                        );

var& IScene scene;
watching Scene(Size(width,height)) -> (&scene) do
  var& IPlayer text_play;
  watching Play(&scene, &text) -> (&text_play) do
    par/or do
      loop do
        await 1s;
        call Player_Set_Char(&text_play, "text", "two");
        await 1s;
        call Player_Set_Char(&text_play, "text", "one");
      end
    with
      loop do
        watching 12s do   
          await Play(&scene, &video);
        end
      end
    with 
      var _char_ptr_ext k;
      (k,_) = await scene.key until (_strcmp(k,"q") == 0);
    with
      await 12s;
    end
  end
end

escape 0;
